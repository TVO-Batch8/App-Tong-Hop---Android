<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/xmlMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ff00"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.TPLdev.bookpdf.ActivityListBookDownloaded" >

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:shadowColor="#dfff"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="0.5"
        android:text="Truyện đã tải"
        android:textColor="#dff00000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/lnSearch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/TextView1"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#11550000"
            android:gravity="center"
            android:hint="Nhập sách cần tìm ở đây nè :)"
            android:padding="2dp"
            android:textColor="#ff0000"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <ListView
        android:id="@+id/gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lnSearch"
        android:layout_marginTop="5dp"
        android:background="#dfff"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:dividerHeight="1.0dp"
        android:numColumns="1" >
    </ListView>

    <ImageView
        android:id="@+id/ivRemoveAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_del" />

</RelativeLayout>