<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="330dp"
    android:background="@drawable/bg_news2"
    android:orientation="vertical"
    tools:context="com.TPLdev.news.Activity_Dialog_Noconnect" >

    <LinearLayout
        android:id="@+id/ln"
        android:layout_width="200dp"
        android:layout_height="320dp"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <WebView
            android:id="@+id/wv"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#00000000" />

        <Button
            android:id="@+id/btOpenWifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/nutxanh"
            android:text="Mở Wifi nào"
            android:textColor="#dfff"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/nutxanhlacay"
            android:text="Đóng thông báo"
            android:textColor="#dfff"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>